<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <p>
      <%= link_to 'All Pets', '/pets' %>
      <%= link_to 'All Shelters', '/shelters' %>
      Favorite Pets: <%= @favorites_list.total_count %>
      </p>
    </nav>

    <% flash.each do |type, message| %>
    <section class = "flash-<%=type%>">
      <p class = "flash-<%=type%>"><%= message %></p>
    </section>
    <% end  %>

    <%= yield %>

  </body>
</html>
