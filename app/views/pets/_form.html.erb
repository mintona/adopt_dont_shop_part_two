<%= form_tag path, method: method do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, pet_name %><br>

  <%= label_tag :description %>
  <%= text_field_tag :description, pet_description %><br>

  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age, pet_age %><br>

  <%= label_tag :sex %>
  <%= select_tag :sex, options_for_select(['Male', 'Female'], pet_sex) %><br>

  <%= label_tag :image %>
  <%= text_field_tag :image, pet_image %><br>
  <br>
  <br>
  <%= submit_tag button_text, class: "button" %>
<% end  %>