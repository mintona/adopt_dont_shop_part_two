<h1>Edit Review</h1>

<%= form_tag "/shelters/#{@shelter_id}/reviews/#{@review.id}", method: :patch do %>

  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %><br>

  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([1, 2, 3, 4, 5], @review.rating) %><br>

  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %><br>

  <%= label_tag :image %>
  <%= text_field_tag :image , @review.image %><br>

  <br>
  <br>
  <%= submit_tag 'Update Review', class: "button" %>
<% end %>
